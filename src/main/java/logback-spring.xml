<configuration>

<springProfile name="dev">
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
	<withJansi>false</withJansi>
	   <encoder>
	     <pattern>%-30(%d{HH:mm:ss.SSS} [%thread]) %-5level %logger{32} - %kvp %msg%n</pattern>
	   </encoder>
	</appender>
</springProfile>
 
<springProfile name="dev">
  <root level="INFO">
    <appender-ref ref="STDOUT" />
  </root>
</springProfile>

</configuration>